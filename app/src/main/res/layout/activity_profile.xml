<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.youssif.joe.cellmonitor.ProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/profile_pic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_pic"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        android:layout_marginTop="34dp"
        android:text="@string/display_name" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:background="@drawable/blur_circle"
        android:text="@string/hey_there_i_am_using_weapp_tracking_app" />

    <Button
        android:id="@+id/settings_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAllCaps="false"

        android:layout_above="@+id/settings_status_btn"
        android:layout_alignEnd="@+id/settings_status_btn"
        android:layout_alignStart="@+id/settings_status_btn"
        android:text="@string/change_image" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/settings_status_btn"
        android:textSize="20sp"
        android:text="@string/change_status"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"

        />

</RelativeLayout>
