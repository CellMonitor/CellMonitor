<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/login_background">

    <View
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:alpha="0.5"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Create"
        android:textSize="70sp"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New Account"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/register_display_name"
        android:drawableLeft="@drawable/ic_user_icon"
        android:hint="  Enter Display Name"
        android:textColorHint="#999999"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="  Enter Your E-mail"
        android:drawableLeft="@drawable/ic_user_mail"
        android:textSize="20sp"
        android:textColorHint="#999999"
        android:textColor="#FFFFFF"
        android:singleLine="true"
        android:id="@+id/register_email"
        android:layout_below="@+id/register_display_name"
        android:layout_alignLeft="@+id/register_display_name"
        android:layout_alignStart="@+id/register_display_name"
        android:layout_alignRight="@+id/register_display_name"
        android:layout_alignEnd="@+id/register_display_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="  Passwrod"
        android:drawableLeft="@drawable/ic_user_pw"
        android:textSize="20sp"
        android:singleLine="true"
        android:textColorHint="#999999"
        android:textColor="#FFFFFF"
        android:id="@+id/reg_password"
        android:layout_below="@+id/register_email"
        android:layout_alignLeft="@+id/register_display_name"
        android:layout_alignStart="@+id/register_display_name"
        android:layout_alignRight="@+id/register_display_name"
        android:layout_alignEnd="@+id/register_display_name" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_drawable"
        android:textColor="@android:color/white"
        android:text="SIGN UP"
        android:textSize="20sp"
        android:id="@+id/reg_create_btn"
        android:layout_below="@+id/reg_password"
        android:layout_marginTop="6dp"
        android:layout_alignLeft="@+id/register_display_name"
        android:layout_alignStart="@+id/register_display_name"
        android:layout_alignRight="@+id/register_display_name"
        android:layout_alignEnd="@+id/register_display_name" />



</RelativeLayout>